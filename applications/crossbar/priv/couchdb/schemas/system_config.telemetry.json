{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "_id": "system_config.telemetry",
    "description": "Schema for telemetry system_config",
    "properties": {
        "leader_app": {
            "default": "ecallmgr",
            "description": "telemetry leader_app",
            "type": "string"
        },
        "leader_tick_ms": {
            "default": 60000,
            "description": "telemetry leader_tick_ms",
            "type": "integer"
        },
        "responders": {
            "default": [
                "waveguide_responder"
            ],
            "description": "telemetry responders",
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "telemetry_enabled": {
            "default": "true",
            "description": "telemetry telemetry_enabled",
            "type": "boolean"
        }
    },
    "type": "object"
}
